<h1>新規レシピ追加</h1>

<% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@recipe.errors.count, "エラー") %>があります:</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @recipe, local: true do |f| %>
  <!-- 見出し -->
  <div>
    <%= f.label :title, "見出し" %>
    <%= f.text_field :title, placeholder: "レシピのタイトルを入力してください", class: "form-control" %>
  </div>

  <!-- カテゴリ -->
  <div>
    <%= f.label :category_id, "カテゴリ" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "カテゴリを選択してください", class: "form-control" %>
  </div>

  <!-- 何人分 -->
  <div>
    <%= f.label :serving_size, "何人分" %>
    <%= f.number_field :serving_size, placeholder: "人数を入力してください", min: 1, class: "form-control" %>
  </div>

  <!-- 材料（食材名と分量を分ける） -->
  <div id="ingredients_section">
    <h2>材料</h2>
    <div class="ingredient">
      <%= label_tag '食材名' %>
      <%= text_field_tag 'recipe[ingredients][][name]', '', placeholder: "食材名を入力してください", class: "form-control" %>
      <%= label_tag '分量' %>
      <%= text_field_tag 'recipe[ingredients][][quantity]', '', placeholder: "分量を入力してください", class: "form-control" %>
    </div>
    <button type="button" id="add_ingredient" class="btn btn-secondary mt-2">材料を追加</button>
  </div>

  <!-- 作り方 -->
  <div id="steps_section">
    <h2>作り方</h2>
    <div class="step">
      <%= label_tag '作り方' %>
      <%= text_area_tag 'recipe[steps][]', '', placeholder: "作り方を入力してください", rows: 3, class: "form-control" %>
      <%= label_tag '画像' %>
      <%= file_field_tag 'recipe[step_images][]', class: "form-control" %>
    </div>
    <button type="button" id="add_step" class="btn btn-secondary mt-2">ステップを追加</button>
  </div>

  <!-- コツ・ポイント -->
  <div>
    <%= f.label :tips, "コツ・ポイント" %>
    <%= f.text_area :tips, placeholder: "コツやポイントを入力してください", rows: 3, class: "form-control" %>
  </div>

  <!-- レシピ画像 -->
  <div>
    <%= f.label :image, "レシピ全体の画像" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <!-- 提出ボタン -->
  <div>
    <%= f.submit "追加", class: "btn btn-primary mt-3" %>
  </div>
<% end %>

<script>
  // 材料の追加
  document.getElementById("add_ingredient").addEventListener("click", () => {
    const ingredientDiv = document.createElement("div");
    ingredientDiv.classList.add("ingredient");
    ingredientDiv.innerHTML = `
      <input type="text" name="recipe[ingredients][][name]" placeholder="食材名を入力してください" class="form-control mt-2">
      <input type="text" name="recipe[ingredients][][quantity]" placeholder="分量を入力してください" class="form-control mt-2">
    `;
    document.getElementById("ingredients_section").appendChild(ingredientDiv);
  });

  // 作り方の追加
  document.getElementById("add_step").addEventListener("click", () => {
    const stepDiv = document.createElement("div");
    stepDiv.classList.add("step");
    stepDiv.innerHTML = `
      <textarea name="recipe[steps][]" placeholder="作り方を入力してください" rows="3" class="form-control mt-2"></textarea>
      <input type="file" name="recipe[step_images][]" class="form-control mt-2">
    `;
    document.getElementById("steps_section").appendChild(stepDiv);
  });
</script>
