<h1>ログイン</h1>

<%= form_with url: top_login_path, local: true do |form| %>
  <div>
    <%= form.label :uid, "ID" %>
    <%= form.text_field :uid %>
  </div>

  <div>
    <%= form.label :pwd, "パスワード" %>
    <%= form.email_field :password %>
  </div>
  
  <div>
    <%= form.label :pwd_confirm, "パスワード確認" %>
    <%= form.email_field :password_confirm, %>
  </div>

  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>
