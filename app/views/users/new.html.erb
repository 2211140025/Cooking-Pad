<h1>新規登録</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>こちらのIDはもう使用されています:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :user_id, 'ユーザーID' %>
    <%= f.text_field :user_id %>
  </div>

  <div>
    <%= f.label :user_pass, 'パスワード' %>
    <%= f.password_field :user_pass %>
  </div>

  <div>
    <%= f.submit '登録' %>
  </div>
<% end %>


<p><%= link_to 'ログイン画面に戻る', root_path %></p>
