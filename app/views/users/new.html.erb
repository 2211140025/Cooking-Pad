<h1>新規ユーザ登録</h1>

<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :user_id, "ID" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :user_pass, "パスワード" %>
    <%= form.email_field :user_pass %>
  </div>
  
  <div>
    <%= form.label :user_pass_confirm, "パスワード確認" %>
    <%= form.email_field :user_pass_confirm %>
  </div>

  <div>
    <%= form.submit "登録" %>
  </div>
<% end %>

<p><%= link_to 'ログイン画面に戻る', root_path %></p>
